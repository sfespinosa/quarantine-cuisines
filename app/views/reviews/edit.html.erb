<%= form_for @review, url: update_review_path, html: { class: "form-signin" }  do |f| %>
<h1 class="h3 mb-3 font-weight-normal">Edit Your Review:</h1>
<%= flash[:message] %><br><br>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :meal_id, value: @meal.id %>
    
    <%= f.label :comment %>
    <%= f.text_field :comment, class: "form-control"  %><br>

    <%= f.label :stars %>
    <%= f.number_field :stars, min: 1, max: 5, class: "form-control"   %><br>

<%= f.submit "Review", class: "btn btn-lg btn-primary btn-block" %>
<% end %>