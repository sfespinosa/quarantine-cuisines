<h1>Create a New Review:</h1>
<%= flash[:message] %>

<%= form_for @review do |f| %>

    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.hidden_field :meal_id, value: @meal.id %>
    
    <%= f.label :comment %>
    <%= f.text_field :comment %><br>

    <%= f.label :stars %>
    <%= f.number_field :stars %><br>

<%= f.submit "Review" %>
<% end %>