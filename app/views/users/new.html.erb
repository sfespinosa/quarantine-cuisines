<%= form_for @user, html: { class: "form-signin" } do |f| %>

<h1 class="h3 mb-3 font-weight-bold">Please Sign Up</h1>

<% if flash[:message].class == Array %>
    <p><% flash[:message].each do |msg| %>
        <li style="color: red;"><%= msg %></li>
    <% end %>
    </p>
<% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"  %><br>

    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control"  %><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control"  %><br>

<%= f.submit "Sign Up", class: "btn btn-lg btn-primary btn-block" %>

<% end %>