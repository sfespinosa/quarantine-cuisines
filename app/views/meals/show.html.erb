<br>
<br>
<br>

<h1><%= @meal.name %></h1>
Category: <%= @meal.category %><br>
Cuisine: <%= @meal.area %><br>

<%= notice %><br>

<%= link_to "Favorite",   favorite_path(@meal, type: "favorite"), method: :get %><br>
<%= link_to "Unfavorite", favorite_path(@meal, type: "unfavorite"), method: :get %><br>

<ul>
<br><% @meal.recipes.each do |ing| %>
    <li><%= ing.measurements %> <%= ing.ingredient.name %></li>
    <% end %><br>
</ul>

<h4> Instructions: </h4>
<ol><% @meal.read_instructions.each do |line| %>
    <li><%= line %></li>
<% end %></ol><br>

<%= image_tag(@meal.image_url) %><br>
<p>Source:  <%= link_to @meal.source, @meal.source %></p><br>


<%= link_to 'Review This Meal', user_review_path %><br>

<br>
<% @meal.reviews.each do |rev| %> 
    Reviewer Name: <%= rev.user.name %><br>
    Comment: <%= rev.comment %><br>
    Stars: <%= rev.stars %><br><br>
        <% if current_user == rev.user %>
            <%= button_to "Edit Review", edit_review_path(rev), method: 'get' %> <%= button_to "Delete Review", review_path(rev), method: 'delete' %>
        <% end %>
<% end %> 